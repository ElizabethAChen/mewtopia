//this calculates run time
//helps you know if a project is too long
//hint- "To the user waiting at his browser, ten seconds is agony, a minute is an aeon, and anything longer is effectively an eternity. 
//When the tiger mauls the antelope, the antelope does not question whether eight claws were used, or a million." Codeless Code

#include <ctime>

main{
    clock_t t1, t2;
		t1 = clock();
    
    //code
    
    t2 = clock();
		float diff((float)t2 - (float)t1); //this needs to be converted to seconds or it makes zero sense
		int seconds = diff / CLOCKS_PER_SEC; 
		int minutes = 0; 
		if (seconds > 60) // if it's very small there's no point in converting
		  {
			  minutes = seconds / 60;
			  seconds = seconds % 60;
		  }
		cout << "The running time was " << minutes << " minutes " << seconds << " seconds." << endl;
    }
    
    
    //written using other people's work.
