    #include <iostream>
    #include <vector>
    #include <algorithm>
    
    //Find the mode of any vector
    //Over 10,000 items and finished in under 30 seconds!
    
    sort(arr.begin(), arr.end()); //must sort to get mode to work  
		 
		/*for (int i = 0; i < arr.size(); i++) //print to double check
			cout << arr[i] << " ";*/
		
		int counter = 1;
		int max = 0;
		string mode = arr[0]; //int, etc
		for (int i = 0, j =1; j != arr.size(); i++, j++)
		{
			if (arr[i] == arr[j]) //if the two items next to eachother are the same 
			{
				counter++;          //add to count
				if (counter > max) // if the count has exceeded the previous maximum
				{
					max = counter;  //replace the value of the max
					mode = arr[j]; //the mode is now the value of the vector at that point
				}
			}
			else
				counter = 1; // reset counter.
		}
    return mode;
    
    //written after looking at other people's work. 
